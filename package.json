{
  "name": "@forsakringskassan/semantic-release-monorepo",
  "version": "3.7.10",
  "private": true,
  "keywords": [
    "semantic-release"
  ],
  "homepage": "https://github.com/Forsakringskassan/semantic-release-config",
  "bugs": "https://github.com/Forsakringskassan/semantic-release-config/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Forsakringskassan/semantic-release-config.git"
  },
  "license": "MIT",
  "author": "Försäkringskassan",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "eslint": "eslint --cache .",
    "eslint:fix": "eslint --cache --fix .",
    "lerna": "lerna",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "pretest": "npm run eslint && npm run prettier:check",
    "test": "node --experimental-vm-modules --test preset-utils.test.mjs",
    "posttest": "node scripts/dry-run.js"
  },
  "commitlint": {
    "extends": "@forsakringskassan/commitlint-config/no-jira"
  },
  "prettier": "@forsakringskassan/prettier-config",
  "devDependencies": {
    "@forsakringskassan/commitlint-config": "3.3.3",
    "@forsakringskassan/eslint-config": "13.4.0",
    "@forsakringskassan/eslint-config-cli": "13.4.0",
    "@forsakringskassan/prettier-config": "3.3.4",
    "@html-validate/release-scripts": "7.1.0",
    "@types/node": "22.19.11",
    "lerna": "9.0.4",
    "memfs": "4.56.10",
    "npm-pkg-lint": "4.3.5",
    "rimraf": "6.1.3"
  },
  "engines": {
    "node": ">= 22.14"
  }
}
